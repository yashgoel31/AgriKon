
                                                              
                                                        
    <ScrollView
        android:id="@+id/scrollView_Market"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" android:tag="layout/fragment_product__details_0" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:paddingTop="40dp"
                android:id="@+id/Product_Market_Image"
                android:src="@drawable/loding" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New_Technique Names"
                android:textAlignment="center"
                android:id="@+id/Product_Market__Name"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product_Market_Price"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:id="@+id/Product_Price" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Technique Description"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/Product_Market_Description"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center_horizontal"
                android:text="Buy Now"
                android:id="@+id/BuyNow"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center_horizontal"
                android:text="Add Cart"
                android:visibility="invisible"
                android:id="@+id/ADD_to_cart"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center_horizontal"
                android:text="Rent"
                android:visibility="invisible"
                android:id="@+id/Rent_The_Product"/>



        </LinearLayout>

    </ScrollView>
         

